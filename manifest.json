{
  "name": "Histree",
  "version": "1.0",
  "description": "View your browsing history as a tree",
  "permissions": [
    "cookies",
    "tabs",
    "activeTab",
    "history",
    "declarativeContent",
    "<all_urls>",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "manifest_version": 2
}